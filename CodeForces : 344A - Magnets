#include<iostream>
using namespace std;

main()
{
   int numOfMagnet,groups=1,poles;
   cin>>numOfMagnet;
   int storePole[numOfMagnet];

   for(int i=0;i<numOfMagnet;i++)
   {
       cin>>poles;
       storePole[i] = poles;
   }
   for(int i=1;i<numOfMagnet;i++)
   {
       if(storePole[i] != storePole[i-1])
       {
           groups++;
       }
   }
   cout<<groups;



    return 0;
}
